{
  "extends": [ "eslint:recommended", "prettier" ],
  "plugins": [ "prettier" ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true,
      "classes": true,
      "experimentalObjectRestSpead": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": [
      2,
      {
        "printWidth": 130,
        "tabWidth": 4,
        "singleQuote": true,
        "bracketSpacing": false
      }
    ],
    "quotes": [
      2,
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "no-console": 0
  }
}
